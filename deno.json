{
  "name": "affinescript-playground",
  "version": "0.1.0",
  "tasks": {
    "build": "deno run -A npm:rescript build",
    "clean": "deno run -A npm:rescript clean",
    "dev": "deno run --watch src/run.js",
    "test": "deno test --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "demo": "deno run src/run.js",
    "build:wasm": "deno task compile --target wasm32-unknown-unknown"
  },
  "imports": {
    "@std/": "jsr:@std/",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@rescript/core": "npm:@rescript/core@^1.0.0"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["src/**/*.res.js"]
  }
}
